<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXListView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.controlsfx.control.CheckComboBox?>

<VBox prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.teamAF.app.Controller.HomeController">
   <HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="800.0" spacing="20.0" styleClass="background-light-black">
      <padding>
         <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
      </padding>
      <children>
         <Label styleClass="background-yellow" text="FHMDb">
            <font>
               <Font name="Segoe UI" size="28.0" />
            </font>
            <padding>
               <Insets left="10.0" right="10.0" />
            </padding>
         </Label>
         <Label styleClass="title-label" text="Welcome to FHMDb!" />
      </children>
   </HBox>
   <VBox spacing="15.0" styleClass="background-black" stylesheets="@styles.css">
      <padding>
         <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
      </padding>
      <children>
         <HBox spacing="10.0" alignment="CENTER_LEFT">
            <children>
               <JFXButton fx:id="sortBtn" styleClass="background-yellow" stylesheets="@styles.css" text="Sort (asc)" />
               <TextField fx:id="searchField" prefHeight="35.0" prefWidth="200.0" promptText="Search FHMDb" />
               <CheckComboBox fx:id="genreCheckComboBox" styleClass="filter-combo-box" stylesheets="@styles.css" />
               <CheckComboBox fx:id="yearCheckComboBox" styleClass="filter-combo-box" stylesheets="@styles.css" />
               <CheckComboBox fx:id="ratingCheckComboBox" styleClass="filter-combo-box" stylesheets="@styles.css" />
               <JFXButton fx:id="searchBtn" onAction="#handleSearch" styleClass="background-yellow" stylesheets="@styles.css" text="Filter" />
            </children>
         </HBox>
         <VBox spacing="8.0">
            <children>
               <Label fx:id="selectedGenresLabel" styleClass="detail-label" text="Selected Genres:" wrapText="true" />
               <Label fx:id="selectedYearsLabel" styleClass="detail-label" text="Selected Years:" wrapText="true" />
               <Label fx:id="selectedRatingsLabel" styleClass="detail-label" text="Selected Ratings:" wrapText="true" />
            </children>
         </VBox>
      </children>
   </VBox>
   <JFXListView fx:id="movieListView" VBox.vgrow="ALWAYS" />
</VBox>
